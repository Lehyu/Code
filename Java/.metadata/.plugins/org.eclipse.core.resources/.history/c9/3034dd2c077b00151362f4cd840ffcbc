package com.tool;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;
import java.util.HashMap;

import com.Algorithm.Bayesian;

public class FileIOTool {
	private BufferedReader stream;
	//private InputStream stream;
    private String filename;

    public FileIOTool(String name){
        filename = name;
        try{
            //stream = new FileInputStream(new File(filename));
            stream = new BufferedReader(new FileReader(filename));
        }catch(Exception e){

        }
    }
    
    public String[][] read() throws IOException{
    	ArrayList<String[]> data = new ArrayList();
    	String line = null;
    	line = stream.readLine();
    	System.out.println(line);
    	while(line != null){
    		String[] record = line.split("\\s+");
    		data.add(record);
    		line = stream.readLine();
    	}
    	String[][] records = new String[data.size()][data.get(0).length];
    	for(int i = 0; i < records.length; i++){
    		records[i] = data.get(i);
    	}
    	HashMap<Integer,String> condition = new HashMap();
    	condition.put(0, "sunny");
    	condition.put(1, "85");
    	condition.put(2, "85");
    	condition.put(3, "FALSE");
    	condition.put(4, "no");
    	System.out.println(new Bayesian().selected(records, condition));
    	return records;
    }
}
